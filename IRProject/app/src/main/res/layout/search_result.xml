<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_bar_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:hint="key word" />

        <ImageButton
            android:id="@+id/search_bar_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_search_black_18dp"
            android:background="@color/searchBlue"/>

        <LinearLayout
            android:id="@+id/location2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="15dp"
            android:background="@color/filter_background">

            <Spinner
                android:id="@+id/location_spinner2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center">
            </Spinner>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/degree2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/border">

        


        <TextView
            android:id="@+id/show_document_number"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            tools:text="top 10 of 25000 documents"/>


    </LinearLayout>




    <ListView
        android:id="@+id/search_result"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:divider="@color/divider_color"
        android:dividerHeight="3dp">

    </ListView>


</LinearLayout>